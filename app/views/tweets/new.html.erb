<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p id="notice"><%= notice %></p>
    <%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
      <% if @tweet.errors.any? %>
        <div id="error_explanation">
          <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>
    
          <ul>
          <% @tweet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= f.label :content, "つぶやきたいことを書いてください" %>
      <%= f.text_field :content, class: 'form-control'  %>
      <br>
      <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
    <% end %>
    
    <%= link_to "ツイート一覧画面にもどる", tweets_path, class: 'btn btn-default btn-block' %>
  </div>
</div>